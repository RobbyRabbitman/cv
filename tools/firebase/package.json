{
  "name": "@robby-rabbitman/cv-tools-firebase",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "files": [
    "package.json"
  ],
  "nx": {
    "tags": [
      "runtime:node",
      "domain:common"
    ],
    "targets": {
      "serve": {
        "command": "firebase emulators:start",
        "options": {
          "cwd": "{projectRoot}",
          "config": "src/firebase.json"
        },
        "configurations": {
          "local": {
            "project": "local",
            "only": "auth,firestore",
            "import": "src/emulator-data"
          }
        },
        "defaultConfiguration": "local",
        "continuous": true
      },
      "export-emulator-data": {
        "command": "firebase emulators:export src/emulator-data",
        "options": {
          "cwd": "{projectRoot}",
          "config": "src/firebase.json",
          "project": "local"
        }
      }
    }
  }
}
