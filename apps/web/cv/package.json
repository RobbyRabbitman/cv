{
  "name": "@robby-rabbitman/cv-apps-web-cv",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@robby-rabbitman/cv-libs-cv-data": "workspace:*",
    "@robby-rabbitman/cv-libs-auth-data": "workspace:*",
    "@robby-rabbitman/cv-libs-common-util": "workspace:*"
  },
  "peerDependencies": {
    "@angular/core": "20.1.7",
    "@angular/common": "20.1.7",
    "@angular/router": "20.1.7",
    "@angular/platform-browser": "20.1.7"
  },
  "devDependencies": {
    "@robby-rabbitman/cv-tools-eslint": "workspace:*",
    "@robby-rabbitman/cv-tools-karma": "workspace:*",
    "@robby-rabbitman/cv-libs-angular-testing": "workspace:*",
    "@robby-rabbitman/cv-tools-typescript": "workspace:*"
  },
  "nx": {
    "tags": [
      "runtime:web"
    ],
    "targets": {
      "build-angular": {
        "command": "ng build",
        "cache": true,
        "inputs": [
          "targets-build-angular",
          "^targets-build-angular"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}"
        }
      },
      "serve": {
        "command": "ng serve",
        "options": {
          "cwd": "{projectRoot}",
          "configuration": "local"
        },
        "dependsOn": [
          "watch-deps",
          {
            "projects": [
              "@robby-rabbitman/cv-tools-firebase"
            ],
            "target": "serve"
          }
        ]
      },
      "watch-deps": {
        "command": "nx watch --p {projectName} --includeDependentProjects --initialRun -- \"nx run \\$NX_PROJECT_NAME:build-ng-packagr || nx run \\$NX_PROJECT_NAME:build-tsc || true\"",
        "continuous": true
      },
      "test-angular": {
        "command": "ng test",
        "cache": true,
        "inputs": [
          "targets-test-angular",
          "^targets-test-angular"
        ],
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "code-coverage": true
        },
        "configurations": {
          "ci": {
            "watch": false,
            "progress": false,
            "browsers": "ChromeHeadlessNoSandbox"
          }
        }
      }
    }
  }
}
