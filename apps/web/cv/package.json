{
  "name": "@robby-rabbitman/cv-apps-web-cv",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@robby-rabbitman/cv-libs-cv-data": "workspace:*",
    "@robby-rabbitman/cv-libs-auth-data": "workspace:*",
    "@robby-rabbitman/cv-libs-common-util": "workspace:*",
    "@robby-rabbitman/cv-libs-common-features-shell": "workspace:*"
  },
  "peerDependencies": {
    "@angular/core": "20.2.3",
    "@angular/common": "20.2.3",
    "@angular/router": "20.2.3",
    "@angular/platform-browser": "20.2.3"
  },
  "devDependencies": {
    "@robby-rabbitman/cv-tools-eslint": "workspace:*",
    "@robby-rabbitman/cv-tools-karma": "workspace:*",
    "@robby-rabbitman/cv-libs-angular-testing": "workspace:*",
    "@robby-rabbitman/cv-tools-typescript": "workspace:*"
  },
  "nx": {
    "tags": [
      "runtime:web"
    ],
    "targets": {
      "build-angular": {
        "command": "ng build",
        "cache": true,
        "inputs": [
          "targets-build-angular",
          "^targets-build-angular"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}"
        }
      },
      "serve": {
        "command": "ng serve",
        "options": {
          "cwd": "{projectRoot}",
          "configuration": "local",
          "hmr": false
        },
        "dependsOn": [
          "^build*",
          "watch-deps",
          {
            "projects": [
              "@robby-rabbitman/cv-tools-firebase"
            ],
            "target": "serve"
          }
        ]
      },
      "watch-deps": {
        "command": "nx watch --p {projectName} --includeDependentProjects -- \"nx run-many -t build-tsc build-ng-packagr -p \\$NX_PROJECT_NAME --exclude {projectName} && find {projectRoot}/src/app -type f -not -name '*.spec.*' -exec touch {} +\"",
        "continuous": true
      },
      "test-angular": {
        "command": "ng test",
        "cache": true,
        "inputs": [
          "targets-test-angular",
          "^targets-test-angular"
        ],
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "code-coverage": true
        },
        "configurations": {
          "ci": {
            "watch": false,
            "progress": false,
            "browsers": "ChromeHeadlessNoSandbox"
          }
        }
      }
    }
  }
}
