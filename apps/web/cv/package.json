{
  "name": "@robby-rabbitman/cv-apps-web-cv",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@robby-rabbitman/cv-libs-cv-data": "workspace:*",
    "@robby-rabbitman/cv-libs-auth-data": "workspace:*",
    "@robby-rabbitman/cv-libs-common-util": "workspace:*",
    "@robby-rabbitman/cv-libs-i18n-data": "workspace:*",
    "@robby-rabbitman/cv-libs-i18n-components": "workspace:*",
    "@robby-rabbitman/cv-libs-i18n-features-translation": "workspace:*",
    "@robby-rabbitman/cv-libs-cv-features-documents": "workspace:*",
    "@robby-rabbitman/cv-libs-common-features-shell": "workspace:*"
  },
  "peerDependencies": {
    "@angular/core": "20.3.1",
    "@angular/common": "20.3.1",
    "@angular/router": "20.3.1",
    "@angular/platform-browser": "20.3.1"
  },
  "devDependencies": {
    "@robby-rabbitman/cv-tools-eslint": "workspace:*",
    "@robby-rabbitman/cv-tools-karma": "workspace:*",
    "@robby-rabbitman/cv-libs-angular-testing": "workspace:*",
    "@robby-rabbitman/cv-tools-typescript": "workspace:*"
  },
  "nx": {
    "implicitDependencies": [
      "@robby-rabbitman/cv-tools-firebase"
    ],
    "tags": [
      "runtime:web",
      "type:app"
    ],
    "targets": {
      "build-angular": {
        "command": "ng build",
        "cache": true,
        "inputs": [
          "targets-build-angular",
          "^targets-build-angular"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}"
        }
      },
      "serve": {
        "command": "ng serve",
        "options": {
          "port": 4200,
          "cwd": "{projectRoot}",
          "configuration": "local",
          "hmr": false
        },
        "continuous": true,
        "dependsOn": [
          "^build*",
          "watch-deps",
          {
            "projects": [
              "@robby-rabbitman/cv-tools-firebase"
            ],
            "target": "serve",
            "params": "ignore"
          }
        ]
      },
      "build-deps": {
        "dependsOn": [
          "^build*"
        ]
      },
      "watch-deps": {
        "command": "[ -n \"${CI:-}\" ] || nx watch --p {projectName} --includeDependentProjects -- \"nx run {projectName}:build-deps && [ \"\\$NX_PROJECT_NAME\" != \"{projectName}\" ] && find {projectRoot}/src/app -type f -not -name '*.spec.*' -exec touch {} +\"",
        "continuous": true
      },
      "test-angular": {
        "command": "ng test",
        "cache": true,
        "inputs": [
          "targets-test-angular",
          "^targets-test-angular"
        ],
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "code-coverage": true
        },
        "configurations": {
          "ci": {
            "watch": false,
            "progress": false,
            "browsers": "ChromeHeadlessNoSandbox"
          }
        }
      }
    }
  }
}
